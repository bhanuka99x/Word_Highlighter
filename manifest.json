{
  "manifest_version": 3,
  "name": "Word Highlighter",
  "version": "1.0",
  "description": "Highlight saved words across websites.",
  "permissions": ["storage", "scripting", "activeTab","contextMenus"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/16w.png",
      "32": "images/32w.png",
      "48": "images/48w.png",
      "128": "images/128w.png"
    }
  },
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ]
}
